<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.liballeg.example"
      android:versionCode="APP_RELEASE_NUMBER"
      android:versionName="APP_VERSION_STRING">
    <uses-sdk android:minSdkVersion="12"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <application android:label="@string/app_name" android:debuggable="false" android:icon="@drawable/icon">
        <activity android:name="org.liballeg.example.ExampleActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                  android:screenOrientation="unspecified"
                  android:configChanges="screenLayout|uiMode|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!--  Tell Allegro the name of the game .so when using dynamic linking -->
            <meta-data android:name="org.liballeg.app_name"
                       android:value="allegro-example"/>
        </activity>
        <activity android:name="org.liballeg.example.EditBoxActivity"
                  android:label="@string/app_name"
                  android:launchMode="standard"
                  android:screenOrientation="behind"
                  android:theme="@android:style/Theme.Holo.Dialog"
                  android:configChanges="screenLayout|uiMode|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <!--  Tell Allegro the name of the game .so when using dynamic linking -->
            <meta-data android:name="org.liballeg.app_name"
                       android:value="allegro-example"/>
        </activity>
    </application>
</manifest>
