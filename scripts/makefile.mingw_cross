CC = i586-mingw32msvc-gcc
CFLAGS = $(T3F_CFLAGS) $(APP_CFLAGS) $(MINGW_CROSS_CFLAGS) $(MINGW_CROSS_CONFIG_CFLAGS)
CXXFLAGS = $(CFLAGS) $(MINGW_CROSS_CONFIG_CXXFLAGS)
LFLAGS = -mwindows
LIB_SUFFIX = -static
PLATFORM_OBJECTS = t3f/menu.o t3f/windows.o icon.o $(MINGW_CROSS_PLATFORM_OBJECTS)
PLATFORM_LIBS = -lallegro_dialog$(LIB_SUFFIX) $(MINGW_CROSS_PLATFORM_LIBS)
DEPEND_LIBS = $(MINGW_CROSS_DEPEND_LIBS) -luuid -lkernel32 -lwinmm -lpsapi\
              -lopengl32 -lglu32 -luser32 -lcomdlg32 -lgdi32 -lshell32 -lole32\
              -ladvapi32 -lws2_32 -lshlwapi -lvorbisfile -lvorbis -logg -ldumb\
              -lfreetype -lpng -lz -ld3d9 -ldsound -lstdc++
DEL_COMMAND = rm -f
DEL_FOLDER_COMMAND = rm -rf
SED_COMMAND = sed -i
EXE_SUFFIX = .exe
COPY_COMMAND = cp
PATH_SEPARATOR = /

include makefile.common

prepare_platform:
	@echo Ready to build...

icon.o : ../icons/windows_icon.ico ../windows/icon.rc
	i586-mingw32msvc-windres --include-dir=../icons -o icon.o ../windows/icon.rc

../windows/info_fixer: ../windows/info_fixer.o
	$(CC) $(T3F_CFLAGS) ../windows/info_fixer.o -o ../windows/info_fixer

windows_zip: $(APP_EXE_NAME)
	@cd ../bin; zip -9 -r $(APP_PACKAGE_DIR)/$(APP_NAME)-$(APP_VERSION)-windows.zip *; cd ../windows/blobs && zip -9 ../$(APP_PACKAGE_DIR)/$(APP_NAME)-$(APP_VERSION)-windows.zip *; cd ../../; cp -a docs windows; cd windows/docs; mv changelog history.txt; mv README readme.txt; mv copyright license.txt; cd ..; zip -9 -r $(APP_PACKAGE_DIR)/$(APP_NAME)-$(APP_VERSION)-windows.zip docs; rm -rf docs
	@echo Windows package created!
